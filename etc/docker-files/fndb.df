FROM debian:8.7
MAINTAINER Pedro Sanders <fonosterteam@fonoster.com>

RUN apt-get -yq update
RUN apt-get -yq install curl lsb-release
RUN curl -L https://getchef.com/chef/install.sh | bash -s -- -v 12.9.41
RUN apt-get -yq clean

COPY chef-repo /var/chef-repo
RUN /usr/bin/chef-solo -o "recipe[fn_commons::users],recipe[fn_mongodb]" -c /var/chef-repo/solo.rb

EXPOSE 27017

RUN chmod +x /var/chef-repo/etc/run_mongodb.sh

ENTRYPOINT ["/bin/sh"]
CMD ["/var/chef-repo/etc/run_mongodb.sh"]