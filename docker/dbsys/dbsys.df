FROM mvertes/alpine-mongo:3.6.3-0
MAINTAINER Pedro Sanders <fonosterteam@fonoster.com>

COPY bootstrap /bootstrap
COPY *.sh /
COPY create-mongodb-user.js /create-mongodb-user.js
COPY mongod.conf /etc/mongod.conf

RUN apk add mongodb-tools && chmod +x run.sh

EXPOSE 27017

CMD ["/bin/sh", "-c", "/run.sh"]