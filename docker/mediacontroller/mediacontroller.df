FROM fonoster/astive
MAINTAINER Pedro Sanders <fonosterteam@fonoster.com>

COPY etc/fonoster.conf                           /etc/fonoster.conf
COPY docker/mediacontroller/astived.properties   $ASTIVE_HOME/conf/astived.properties
COPY docker/binaries/voice-fat.jar               $ASTIVE_APPS

RUN apk update \
    && apk add lame ffmpeg \
    && rm -rf /var/cache/apk/*

EXPOSE 4573
EXPOSE 4200
EXPOSE 4202
