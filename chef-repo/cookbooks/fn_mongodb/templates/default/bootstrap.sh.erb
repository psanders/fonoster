#!/bin/bash

docs=(User Account Activity Broadcast Rate ServiceProvider Gateway DIDNumber Domain Agent)
db=<%= node[:db][:name] %>
path=$1

if [ $# -eq 0 ]
then
    echo "Usage: $0 path/to/docs"
    exit 1
fi

for doc in "${docs[@]}"
do
	mongoimport --db $db --collection $doc --drop --file $path/$doc.json \
	    -u <%= node[:db][:username] %> -p <%= node[:db][:secret] %>
done